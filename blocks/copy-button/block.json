{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tgp/copy-button",
	"title": "Copy for LLM",
	"category": "design",
	"parent": [ "core/buttons" ],
	"description": "A button that copies the current page content as markdown for AI assistants.",
	"keywords": [ "llm", "markdown", "copy", "ai", "chatgpt", "clipboard" ],
	"textdomain": "tgp-llms-txt",
	"attributes": {
		"label": {
			"type": "string",
			"default": "Copy for LLM"
		},
		"showIcon": {
			"type": "boolean",
			"default": true
		},
		"width": {
			"type": "number"
		}
	},
	"supports": {
		"html": false,
		"anchor": true,
		"splitting": true,
		"align": false,
		"alignWide": false,
		"reusable": false,
		"color": {
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"shadow": true,
		"spacing": {
			"padding": [ "horizontal", "vertical" ],
			"__experimentalDefaultControls": {
				"padding": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		},
		"interactivity": {
			"clientNavigation": true
		}
	},
	"styles": [
		{ "name": "fill", "label": "Fill", "isDefault": true },
		{ "name": "outline", "label": "Outline" }
	],
	"editorScript": "file:./index.js",
	"style": "file:./style.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js",
	"selectors": {
		"root": ".wp-block-button .wp-block-button__link"
	}
}
